# The loopback network interface
auto lo
iface lo inet loopback
    address 10.0.0.41/32

# The primary network interface
auto eth0
iface eth0
    address 10.255.6.5/23
    gateway 10.255.6.1
    alias Connects to MGMT
    vrf mgmt

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto

auto public
iface public
    vrf-table auto

auto swp1s0
iface swp1s0

auto swp1s1
iface swp1s1
    alias Connects to oob-mgmt-switch
    address 185.2.139.136/31
    mtu 1500
    vrf public

auto swp1s2
iface swp1s2

auto swp1s3
iface swp1s3

auto swp15
iface swp15
    alias Connects to Spine01

auto swp16
iface swp16
    alias Connects to Spine02

auto bridge
iface bridge
    bridge-ports vxlan4001
    bridge-vids 4001
    bridge-vlan-aware yes

auto vlan4001
iface vlan4001
    vlan-id 4001
    vlan-raw-device bridge
    vrf public

auto vxlan4001
iface vxlan4001
    vxlan-id 104001
    vxlan-local-tunnelip 10.0.0.41
    bridge-learning off
    bridge-access 4001

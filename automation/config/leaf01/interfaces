
# Loopback interface
auto lo
iface lo inet loopback
  address 10.0.160.11/32
  alias loopback interface

# Management interface
auto eth0
iface eth0
  vrf mgmt
  address 10.0.163.11/25
  gateway 10.0.163.1

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto


# Connects to server02
auto swp2
iface swp2
  alias to server02
    bridge-access 100
  
# Connects to spine01
auto swp49
iface swp49
  alias to spine01
  
# Connects to server01
auto swp1
iface swp1
  alias to server01
    bridge-access 100
  
# Connects to spine02
auto swp50
iface swp50
  alias to spine02
  
# Bridge configuration
auto bridge
iface bridge
    bridge-vlan-aware yes
    bridge-ports swp1 swp2 vni100 vxlan4001
    bridge-vids 100 4001
    bridge-pvid 1


# Loopback interface
auto lo
iface lo inet loopback
  address 10.0.0.42/32
  alias loopback interface

# Management interface
auto eth0
iface eth0
  vrf mgmt
  address 10.0.3.42/25
  gateway 10.0.3.1

auto mgmt
interface mgmt
    address 127.0.0.1/8
    vrf-table auto




# Connects to border router
  
interface swp32
vrf public
address 185.2.139.138/31
address 2A02:2498:E004:2F::2/64


# Connects to spine02
  
!
interface swp2
 ipv6 nd ra-interval 10
 no ipv6 nd suppress-ra
!


# Connects to spine01
  
!
interface swp1
 ipv6 nd ra-interval 10
 no ipv6 nd suppress-ra
!


# Connects to spine04
  
!
interface swp4
 ipv6 nd ra-interval 10
 no ipv6 nd suppress-ra
!


# Connects to spine03
  
!
interface swp3
 ipv6 nd ra-interval 10
 no ipv6 nd suppress-ra
!



# Bridge configuration
auto bridge
iface bridge
    bridge-vlan-aware yes
    bridge-ports  vxlan4001
    bridge-vids 4001
    bridge-pvid 1


# VNI configuration
auto vxlan4001
iface vxlan4001
    mtu 9166
    vxlan-id 104001
    vxlan-local-tunnelip 10.0.0.42
    bridge-access 4001
    bridge-learning off
    bridge-arp-nd-suppress on

auto public
iface public
    vrf-table auto



auto vlan4001
iface vlan4001
    vlan-id 4001
    vlan-raw-device bridge
    vrf public

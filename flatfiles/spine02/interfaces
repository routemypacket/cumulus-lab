# Loopback interface
auto lo
iface lo inet loopback
  address 10.0.0.22/32
  alias loopback interface

# Management interface
auto eth0
iface eth0
 vrf mgmt
    address 10.255.6.8/23
    gateway 10.255.6.1

auto mgmt
iface mgmt
    address 127.0.0.1/8
    vrf-table auto

# Port to Leaf01
auto swp1
iface swp1
  mtu 9216
  alias to Leaf01

# Port to Leaf02
auto swp2
iface swp2
  mtu 9216
  alias to Leaf02

# Port to Exit01
auto swp13
iface swp13
  mtu 9216
  alias to Exit01

# Port to Exit02
auto swp14
iface swp14
  mtu 9216
  alias to Exit02

# Port to Spine02
auto swp15
iface swp15
  mtu 9216
  alias to Spine02

# Port to Spine02
auto swp16
iface swp16
  mtu 9216
  alias to Spine02
